  <!-- Story box -->
  <div id="storyBox">Click on something in the picture to reveal its tale...</div>

  <script>
    function showStory(part) {
      let stories = {
        shadow: "The shadow stretches unnaturally, as if it belongs to something unseen, whispering of things buried deeper than the graves.",
        tombstone: "The largest stone bears no name, yet visitors leave offerings at its base, fearing what rests beneath.",
        robe: "The robed figure stands silent. Some say they mourn. Others say they wait."
      };
      document.getElementById("storyBox").innerHTML = stories[part];
    }
  </script>
