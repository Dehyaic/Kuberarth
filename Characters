  <script>
    // Toggle character details
    function toggleDetails(card) {
      let details = card.querySelector(".details");
      details.style.display = (details.style.display === "block") ? "none" : "block";
    }

    // Simple interactive relationship map
    const canvas = document.getElementById("relationshipMap");
    const ctx = canvas.getContext("2d");

    let nodes = [
      { x: 100, y: 100, name: "Arvera" },
      { x: 300, y: 200, name: "Morradiant" },
      { x: 500, y: 120, name: "Zerathum" }
    ];

    let edges = [
      [0,1], // Arvera ↔ Morradiant
      [1,2]  // Morradiant ↔ Zerathum
    ];

    function draw() {
      ctx.clearRect(0, 0, canvas.width, canvas.height);
      // Draw edges
      ctx.strokeStyle = "#888";
      ctx.lineWidth = 2;
      edges.forEach(([a,b]) => {
        ctx.beginPath();
        ctx.moveTo(nodes[a].x, nodes[a].y);
        ctx.lineTo(nodes[b].x, nodes[b].y);
        ctx.stroke();
      });
      // Draw nodes
      nodes.forEach(node => {
        ctx.beginPath();
        ctx.arc(node.x, node.y, 30, 0, Math.PI*2);
        ctx.fillStyle = "#fff";
        ctx.fill();
        ctx.strokeStyle = "#333";
        ctx.stroke();
        ctx.fillStyle = "#000";
        ctx.textAlign = "center";
        ctx.font = "14px Arial";
        ctx.fillText(node.name, node.x, node.y+4);
      });
    }

    draw();
  </script>

