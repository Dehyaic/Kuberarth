    function showStory(part) {
      let stories = {
        abyss: "Underwater space of Kuberarth. No one saw whats lies on the bottom. No sun light reach that deep. No walls or surface. Just the void with species of cruel deep ocean...",
      };
      document.getElementById("storyBox").innerHTML = stories[part];
    }
